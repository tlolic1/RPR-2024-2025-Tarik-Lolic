<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ListView fx:id="listaBrojeva" prefHeight="200.0" prefWidth="320.0"/>
    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Parni" onAction="#naKlikDugmetaParni"/>
        <Button text="Neparni" onAction="#naKlikDugmetaNeparni"/>
        <Button text="Svi" onAction="#naKlikDugmetaSvi"/>
    </HBox>
</VBox>